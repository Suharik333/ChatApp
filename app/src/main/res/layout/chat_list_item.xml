<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/chat_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@android:drawable/sym_def_app_icon" />

    <TextView
        android:id="@+id/chat_title"
        android:textSize="17sp"
        android:textStyle="bold"
        android:textColor="#222222"
        android:text="Chat name long long logn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/chat_icon" />

    <TextView
        android:id="@+id/chat_last_message"
        android:textSize="16sp"
        android:textColor="#8a8a8a"
        android:text="Last Chat message long long logn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/chat_title"
        android:layout_toRightOf="@id/chat_icon" />

    <TextView
        android:id="@+id/chat_timestamp"
        android:text="9:59 PM"
        android:textSize="13sp"
        android:textColor="#999999"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true" />

    <TextView
        android:id="@+id/chat_new_messages"
        android:text="5"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:gravity="center"
        android:background="@drawable/chat_new_messages"
        android:layout_alignParentRight="true"
        android:layout_below="@id/chat_timestamp" />

    <TextView
    android:id="@+id/chat_unread"
    android:layout_width="14dp"
    android:layout_height="14dp"
    android:text="20"
    android:layout_alignBaseline="@id/chat_timestamp"
    android:gravity="center"
    android:textColor="#5FB9FA"
    android:background="@drawable/chat_unread"
    android:layout_toLeftOf="@id/chat_timestamp" />

    <TextView
        android:id="@+id/mac_address"
        android:layout_width="0dp"
        android:layout_height="0dp" />
</RelativeLayout>