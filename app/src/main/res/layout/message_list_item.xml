<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/message_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@android:drawable/sym_def_app_icon" />

    <TextView
        android:id="@+id/message_title"
        android:textSize="17sp"
        android:textStyle="bold"
        android:textColor="#222222"
        android:text="Chat name long long logn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/message_icon" />

    <TextView
        android:id="@+id/message_last_message"
        android:textSize="16sp"
        android:textColor="#8a8a8a"
        android:text="Last Chat message long long logn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/chat_title"
        android:layout_toRightOf="@id/message_icon" />

    <TextView
        android:id="@+id/message_timestamp"
        android:text="9:59 PM"
        android:textSize="13sp"
        android:textColor="#999999"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/message_title" />

    <TextView
        android:id="@+id/message_unread"
        android:layout_width="14dp"
        android:layout_height="14dp"
        android:text="20"
        android:layout_alignBaseline="@id/chat_timestamp"
        android:gravity="center"
        android:textColor="#5FB9FA"
        android:background="@drawable/chat_unread"
        android:layout_alignParentRight="true" />
</RelativeLayout>